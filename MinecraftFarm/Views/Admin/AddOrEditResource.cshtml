@model MinecraftFarm.ViewModels.ResourceViewModel
@{
    bool isAdd = Model.Action == MinecraftFarm.ViewModels.Action.Add;
    string formAction = isAdd ? "AddResource" : "EditResource";
    string btnText = isAdd ? "Create" : "Edit";
 }

<form method="post" asp-action= "@formAction" asp-controller="Admin">
    <input type ="hidden" asp-for="Action"/>
    <div class="form-group">
        <label asp-for="Name">Resource name</label>
        <input type="text" autocomplete="off" class="form-control" asp-for="Name" placeholder="Coal">
        @Html.ValidationMessageFor(model => model.Name, "", new {style = "color: red;"})
    </div>
    <div class="form-group">
        <label asp-for="IconFileName">Icon Url</label>
        <input type="text" autocomplete="off" class="form-control" asp-for="IconFileName">
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>
    <button class="btn btn-success">@btnText</button>
</form>