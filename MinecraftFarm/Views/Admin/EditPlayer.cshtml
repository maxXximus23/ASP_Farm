@model MinecraftFarm.ViewModels.PlayerViewModel

<form method="post" asp-action="EditPlayer" asp-controller="Admin">
    <input type="hidden" asp-for="Action" />
    <div class="form-group">
        <label asp-for="Nickname">Player nickname</label>
        <input type="text" autocomplete="off" class="form-control" asp-for="Nickname" placeholder="Max Suck">
        @Html.ValidationMessageFor(model => model.Nickname, "", new { style = "color: red;" })
    </div>
    <div class="form-group">
        <label asp-for="Emeralds">Emeralds quantity</label>
        <input type="number" autocomplete="off" class="form-control" asp-for="Emeralds">
    </div>
    <button class="btn btn-success">Edit</button>
</form>